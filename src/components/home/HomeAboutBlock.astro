---
import ButtonLink from '../ui-elements/ButtonLink.astro'
import Cluster from '../ui-elements/Cluster.astro'
import ContentContainer from '../ui-elements/ContentContainer.astro'
import Stack from '../ui-elements/Stack.astro'

const blocks = [
    {
        title: "Qu'est-ce que Sunny Tech?",
        description:
            'Sunny Tech est la 1ère conférence Tech organisée à Montpellier. Une conférence annuelle des technologies du numérique, créée par des passionnés, pour des passionnés avec l’ambition de rayonner nationalement, et même internationalement, à travers l’intervention de conférenciers étrangers de renom.',
    },
    {
        title: 'Équipe organisatrice',
        description:
            'Sunny Tech est une association bénévole à but non lucratif composée de développeurs, orateurs, designers et membres de meetups',
        callToAction: {
            label: "Découvrez l'équipe organisatrice",
            link: '/team',
        },
    },
]
---

<ContentContainer spaceBlock="4rem">
    <Cluster space="2rem">
        <div class="image-container is-laptop-plus">
            <a href="/team" tabindex="-1">
                <img class="organizers-photo" src="/backgrounds/team.jpg" alt="Organizer" loading="lazy" />
            </a>
        </div>

        <div class="description-block">
            <Stack space="2rem">
                {
                    blocks.map((block) => (
                        <div>
                            <Stack>
                                <h3>{block.title}</h3>
                                <p class="text-subtle">{block.description}</p>

                                {block.callToAction && (
                                    <ButtonLink href={block.callToAction.link}>{block.callToAction.label}</ButtonLink>
                                )}
                            </Stack>
                        </div>
                    ))
                }
            </Stack>
        </div>
    </Cluster>
</ContentContainer>

<style>
    .image-container {
        flex: 1;
        border-radius: 0.25rem;
        overflow: hidden;

        &.is-laptop-plus {
            display: block;

            @media (max-width: 720px) {
                display: none;
            }
        }

        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    }

    .description-block {
        flex: 1.5;
    }
</style>
