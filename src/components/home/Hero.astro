---
import ButtonLink from '../ui-elements/ButtonLink.astro'
---

<div class="container">
    <div class="content">
        <img src="/logos-sunnytech/logo.svg" alt="SunnyTech" loading="lazy" />

        <h1>26 et 27 juin 2025 à Montpellier</h1>
        <h2>#SeaTechAndSun ☀️️️</h2>

        <ButtonLink href="https://2024.sunny-tech.io" target="_blank">Édition 2024</ButtonLink>
        <div class="cfp-cta">CFP fin novembre !</div>
    </div>
    <div class="overlay"></div>
</div>

<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 100px 16px 24px;
        background: url('/backgrounds/home.jpg') no-repeat center center;
        background-size: cover;
        text-align: center;
        height: clamp(760px, calc(100vh + 1px), 900px);
        position: relative;
        margin-top: -65px;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 0;
    }

    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 20px;
        z-index: 1;
    }

    .content {
        img {
            width: 400px;
        }

        h1 {
            font-size: 28px;
            line-height: 1.25;
            font-weight: 700;
            color: #fff;

            @media (min-width: 640px) {
                font-size: 40px;
            }
        }

        h2 {
            font-size: 20px;
            font-weight: 400;
            color: #fff;
        }
    }

    .cfp-cta {
        color: #464646;
        background-color: var(--secondary-background-color);
        border-radius: 4px;
        padding: 8px 16px;
        font-weight: 600;
        text-transform: uppercase;
    }
</style>
