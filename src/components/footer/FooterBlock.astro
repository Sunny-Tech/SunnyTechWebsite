---
import FooterSocial from './FooterSocial.astro'
import FooterRel from './FooterRel.astro'
import FooterNav from './FooterNav.astro'
import ContentContainer from '../ui-elements/ContentContainer.astro'
---

<footer class="footer-block">
    <ContentContainer>
        <FooterSocial />
        <FooterRel />
        <FooterNav />
    </ContentContainer>
</footer>

<style>
    .footer-block {
        margin-top: 2.5rem;
        color: var(--footer-text-color);
        background: var(--footer-background-color);
        font-size: 0.875rem;

        :global(a) {
            color: var(--footer-text-color);
            text-decoration: 2px underline rgba(255, 255, 255, 0.4);
            text-underline-offset: 2px;

            &:hover {
                text-decoration: 2px underline var(--background);
            }
        }
    }
</style>

